<?xml version="1.0" encoding="utf-8"?>
<com.mephone.flashbar.FloatWindowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/tray"
        android:layout_width="@dimen/cell_width"
        android:layout_height="match_parent"
        android:background="@drawable/left_bg"
        android:clickable="false"
        android:orientation="vertical"
        android:visibility="gone" >

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip" >

            <LinearLayout
                android:id="@+id/app_item_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-5dip"
        android:layout_toRightOf="@+id/tray" >

        <Button
            android:id="@+id/handle"
            android:layout_width="50dip"
            android:layout_height="110dip"
            android:background="@drawable/left_handle_closed"
            android:gravity="center_vertical" />
    </AbsoluteLayout>

</com.mephone.flashbar.FloatWindowView>